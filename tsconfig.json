{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    
    // ----------------------------------------------------------------
    // CORREÇÕES PARA O ALIAS DE IMPORTAÇÃO
    // ----------------------------------------------------------------
    "baseUrl": ".", // Define que o ponto de partida é a raiz do projeto (importante para paths)
    "paths": {
      // Mapeamento que permite usar '@/utils/...' para referenciar a pasta 'utils/'
      "@/utils/*": ["utils/*"],
      // Mantendo o mapeamento genérico, caso você use @/app, @/lib, etc.
      "@/*": ["./*"]
    }
    // ----------------------------------------------------------------
    
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],
  "exclude": ["node_modules"]
}